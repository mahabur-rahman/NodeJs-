<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerLinks}}
</head>

<body>

    <!-- navbar start  -->
   {{>navbar}}
    <!-- navbar end -->



    <!-- start hero part  -->
    <section id="hero">
        <div class="container">
            <div class="row">

                <div class="col-xl-6 align-self-center">
             
                    <div class="main_content">
                        <form>
                        <input type="text" id="cityName" placeholder="Enter city name.." autocomplete="off">
                        <input type="submit" value="search.." id="submitBtn">
                        </form>
                    </div>

                    <div class="main_layer">
                        <div class="date_layer">
                            <p class="day">Tuesday</p>
                            <p class="monthCount">13 OCT</p>
                        </div>
                        <p id="output">output here</p>
                        <p id="temp"><span id="degree">0</span><sup>o</sup>c</p>
                        <p id="cityStatus"><i class="fa fa-cloud"></i></p>
                    </div>
                        
             </div>
            </div>
        </div>
    </section>
    <!-- hero part end -->



    <!-- footer part start -->
    {{>footer}}
    <!-- footer part end -->




    <!-- bootstrap js file  -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

    <!-- custom js file -->
    <script src="js/main.js"></script>
</body>

</html>