<!DOCTYPE html>
<html lang="en">
<head>
    {{>header}}
</head>
<body>
  {{>navbar}}
    <h1>Home page</h1>


{{!-- form  --}}

<div class="container">
    <div class="row">
        <div class="col-xl-6">


            {{!-- form  --}}
        <form action="/register" method="POST">
             <input type="text" placeholder="first name" name="firstname" value=""><br>
             <input type="email" placeholder="email" name="email" value=""><br>
             <input type="number" placeholder="Phone" name="phone" value=""><br>
             <input type="password" placeholder="Password" name="password" value=""><br>

             <hr>
                 <div class="col-xl-6">
                    <input type="text" placeholder="last name" name="lastname" value=""><br>

                     <input type="number" name="age" placeholder="age">

                    <input type="password" placeholder="confirm password" name="confirmpassword" value=""><br>


                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gender" checked value="male">
                        <label class="form-check-label">
                        Male
                        </label>
                        </div>
                        <div class="form-check">
                        <input class="form-check-input" type="radio" name="gender" value="female">
                        <label class="form-check-label">
                        Female
                        </label>
                    </div>
                 </div>
                 {{!-- submit btn --}}
                 <input type="submit" value="register">
           </form>
        </div>
        
    </div>
</div>



